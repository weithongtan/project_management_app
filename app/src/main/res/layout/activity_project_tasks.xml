<?xml version="1.0" encoding="utf-8"?>
<!-- activity_main.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Include the complex item layout -->
    <include
        layout="@layout/activity_project_tasks_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/filterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/table_cell_border"
            android:orientation="horizontal"
            android:paddingLeft="13dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/filter_icon" />

            <TextView
                android:id="@+id/selectedDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="filters" />

        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="413dp"
            android:layout_height="536dp"
            android:background="#E8E8E8"
            android:divider="#9A9A9A"
            android:showDividers="beginning|end|none"
            android:stretchColumns="*"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <!-- Row 1: Column Titles -->
            <TableRow>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Task Name"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Assignee"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Due Date"
                    android:textSize="16sp" />
            </TableRow>

            <!-- Row 2: To Do -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow android:id="@+id/row_todo">

                <ImageView
                    android:id="@+id/btn_to_do"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:onClick="dropDownShowDetail"
                    android:tag="false"
                    app:srcCompat="@drawable/right_arrow" />

                <TextView
                    android:id="@+id/btn_to_do"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="dropDownShowDetail"
                    android:padding="8dp"
                    android:tag="false"
                    android:text="To-Do"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/a1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="" />
            </TableRow>


            <!-- Row 3: Pending -->
            <TableRow android:divider="@color/design_default_color_error">

                <ImageView
                    android:id="@+id/btn_pending"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:onClick="dropDownShowDetail"
                    android:tag="false"
                    app:srcCompat="@drawable/right_arrow" />

                <TextView
                    android:id="@+id/btn_pending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="dropDownShowDetail"
                    android:padding="8dp"
                    android:tag="false"
                    android:text="Pending"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="" />
            </TableRow>


            <!-- Row 4: Complete -->
            <TableRow>

                <ImageView
                    android:id="@+id/btn_done"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:onClick="dropDownShowDetail"
                    android:tag="false"
                    app:srcCompat="@drawable/right_arrow"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/btn_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="dropDownShowDetail"
                    android:padding="8dp"
                    android:tag="false"
                    android:text="Done" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="" />
            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/btn_create_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="280dp"
            android:layout_marginTop="400dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/blue_fill__rounded_color"
            android:padding="10dp"
            android:text="+ New Task"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Other views -->


</LinearLayout>
